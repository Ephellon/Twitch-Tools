{
    "manifest_version": 2,

    "name": "Twitch Tools",
    "description": "A set of useful and customizable tools for Twitch",
    "version": "2.7.4",
    "minimum_chrome_version": "85",
    "homepage_url": "https://github.com/ephellon/twitch-tools",

    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "96": "96.png",
        "128": "128.png",
        "256": "256.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://www.twitch.tv/*",
                "http://www.twitch.tv/*"
            ],

            "all_frames": true,
            "run_at": "document_end",
            "js": [
                "tools.js",
                "ext/sortable.js"
            ]
        }
    ],

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

    "options_page": "settings.html",
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },

    "browser_action": {
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "48": "48.png",
            "96": "96.png"
        },
        "default_title": "Twitch Tools",
        "default_popup": "settings.html?popup=1"
    },

    "permissions": [
        "*://www.twitch.tv/*",
        "*://twitch.tv/*",

        "storage",
        "tabs"
    ],

    "web_accessible_resources": ["*.png"]
}
